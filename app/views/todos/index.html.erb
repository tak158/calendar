<%= @point_of_day[@day_of_week] %>
<%= @end_of_month %>
<%= @todos[0].id %>

<br>

<table class="table" border="3">
  <thead>
    <th>SUN</th>
    <th>MON</th>
    <th>TUE</th>
    <th>WED</th>
    <th>THU</th>
    <th>FRI</th>
    <th>SAT</th>
  </thead>
  <tbody>
    <% 5.times do |i| %>
    <tr>
      <% 7.times do |j| %>
      <td>
        <% if @count_of_block>=@point_of_day[@day_of_week] && @end_of_month.to_i>=@count_of_day.to_i %>
        <div class="day_element" id="<%= "day_#{@count_of_day}" %>"><%= link_to @count_of_day, "#myModal", remote: true, class: "hoehoe", "data-toggle" => "modal" %></div>
        <% @count_of_day+=1 %>
        <% end %>
      </td>
      <% @count_of_block+=1 %>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

